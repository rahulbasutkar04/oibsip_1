<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Weight">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KILOGRAM TO GRAM"
                android:textAlignment="center"
                android:textColor="#151414"
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNumber9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Kilograms:"
                android:inputType="number"
                android:textSize="24dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert"
                android:textAlignment="center"
                android:textColor="#0E0D0D"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ans"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GRAM TO KILOGRAM"
                android:textAlignment="center"
                android:textColor="#151414"
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNumber10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Grams:"
                android:inputType="number"
                android:textSize="24dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert"
                android:textAlignment="center"
                android:textColor="#0E0D0D"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ans"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KILOGRAM TO LBS"
                android:textAlignment="center"
                android:textColor="#151414"
                android:textSize="24dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextNumber11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter Kilograms:"
                android:inputType="number"
                android:textSize="24dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert"
                android:textAlignment="center"
                android:textColor="#0E0D0D"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ans"
                android:textSize="24dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>